.section-preloader 
  position absolute
  z-index 1

  .background-top,
  .background-bottom
  	width 100%
  	height 50%
  	background-color #fff

  .loading  
  	position absolute
  	z-index 1
  	top: 50%
  	width 100%
  	height 1px
  	background-color #ccc

  .loading-progress
  	width 100%
  	height 100%
  	background-color #333
  	transform-origin 0 0